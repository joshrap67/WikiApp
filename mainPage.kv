#:kivy 1.10.0
#:import Window kivy.core.window.Window

<MainPage>:
    Label:
        font_size: Window.height * .05
        x: Window.width * .2
        y: Window.height * .8
        text: 'Current Article'
    Label:
        id:app_attributes
        font_size: Window.height * .025
        x: Window.width *.2
        y: Window.height * .7
        text_size: self.size
        size_hint: 1, .3
        text: ''
    Label:
        id: history_label
        font_size: Window.height * .025
        x: Window.width * .8
        y: Window.width * .5
        text_size: self.width, None
        # size_hint: 1, .3
        size_hint_y: None
        height: self.texture_size[1]
        text: ''
    Label:
        font_size: Window.height * .05
        x: Window.width * .8
        y: Window.height * .8
        text: 'Previous Articles'
    Button:
        text: 'Start'
        center_x: root.width / 2
        on_press:
            root.turn_on()
    Button:
        text: 'Quit'
        on_press:
            root.turn_off()